@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="~/Content/Admin/css/css.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/Admin/css/main.css" type="text/css" rel="stylesheet" />
    <link rel="shortcut icon" href="images/main/favicon.ico" />
    <link href="~/Content/css/listPage.css" rel="stylesheet" />
</head>
<body>
    <!--main_top-->
    <table width="99%" border="0" cellspacing="0" cellpadding="0" id="searchmain">
        <tr>
            <td width="99%" align="left" valign="top">您的位置：服务管理</td>
        </tr>
        <tr>
            <td align="left" valign="top">
                <table width="100%" border="0" cellspacing="0" cellpadding="0" id="search">
                    <tr>
                        <td width="90%" align="left" valign="middle">
                            <form method="post" action="~/Service/Index">
                                <span>标题：</span>
                                <input type="text" name="search" class="text-word">
                                <input type="submit" class="text-but" value="查询">
                            </form>
                        </td>
                        <td width="10%" align="center" valign="middle" style="text-align:right; width:150px;">
                            <a href="/Service/Create" target="mainFrame" onfocus="  this.blur()" class="add">新增服务</a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td align="left" valign="top">
                <table width="100%" border="0" cellspacing="0" cellpadding="0" id="main-tab">
                    <tr>
                        <th align="center" valign="middle" class="borderright">编号</th>
                        <th align="center" valign="middle" class="borderright">标题</th>
                        <th align="center" valign="middle" class="borderright">价格</th>
                        <th align="center" valign="middle" class="borderright">服务图片</th> 
                        <th align="center" valign="middle" class="borderright">添加时间</th>
                        <th align="center" valign="middle">操作</th>
                    </tr>
                    @{
                        List<BeautySalonWebApp.Models.BS_Service> mlist = (List<BeautySalonWebApp.Models.BS_Service>)ViewData["List"];

                        foreach (var item in mlist)
                        {
                            <tr onmouseout="this.style.backgroundColor='#ffffff'" onmouseover="this.style.backgroundColor='#edf5ff'">
                                <td align="center" valign="middle" class="borderright borderbottom">@item.Id</td>
                                <td align="center" valign="middle" class="borderright borderbottom">@item.Title</td>
                                <td align="center" valign="middle" class="borderright borderbottom">@item.Price 元/次</td>
                                <td align="center" valign="middle" class="borderright borderbottom"><img width="80" height="80" src="@item.ServerPic" /></td>
                                <td align="center" valign="middle" class="borderright borderbottom">@item.AddTime</td>
                                <td align="center" valign="middle" class="borderbottom">

                                    <a href="/Service/Edit/@item.Id" target="mainFrame" onfocus="this.blur()" class="add">编辑</a>
                                    <span class="gray">&nbsp;|&nbsp;</span>
                                    <a href="/Service/Delete/@item.Id" onclick="confirm('确定要删除吗?')" target="mainFrame" onfocus="this.blur()" class="add">删除</a>
                                </td>
                            </tr>
                        }
                    }

                </table>
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" class="fenye">
                @Html.Raw(ViewData["Bar"])
            </td>
        </tr>
    </table>
</body>
</html>