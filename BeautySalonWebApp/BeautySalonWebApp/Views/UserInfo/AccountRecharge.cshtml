@model BeautySalonWebApp.Models.BS_UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>主要内容区main</title>
    <link href="~/Content/Admin/css/css.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/Admin/css/main.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/css/addPage.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/Admin/images/main/favicon.ico" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript">
        function addform() {
            //验证
            var money = $("#money").val();
           
            if (money == "") {
                alert("请输入价格");
                return false;
            }
            var ival = parseInt(money);//如果变量val是字符类型的数则转换为int类型 如果不是则ival为NaN
            if (isNaN(ival)) {
                alert(money + "不是数字");
                return false;
            }
            $("#addForm").submit();
        }
    </script>
</head>
<body>
    <!--main_top-->
    <table width="99%" border="0" cellspacing="0" cellpadding="0" id="searchmain">
        <tr>
            <td width="99%" align="left" valign="top">您的位置：<a href="/UserInfo/Index">会员管理</a>&nbsp;&nbsp;>&nbsp;&nbsp;在线充值</td>
        </tr>
        <tr>
            <td align="left" valign="top" id="addinfo">
                <a href="/UserInfo/Index" target="mainFrame" onfocus="this.blur()" class="add">返回上一级</a>
            </td>
        </tr>
        <tr>
            <td align="left" valign="top">
                <form id="addForm" method="post" action="/UserInfo/AccountRecharge" enctype="multipart/form-data">
                    <input name="Id" type="hidden" value="@Model.Id" />
                    <table width="100%" border="0" cellspacing="0" cellpadding="0" id="main-tab">
                        <tr onmouseout="this.style.backgroundColor='#ffffff'" onmouseover="this.style.backgroundColor='#edf5ff'">
                            <td align="right" valign="middle" class="borderright borderbottom bggray">用户名：</td>
                            <td align="left" valign="middle" class="borderright borderbottom main-for">
                                <input type="text" readonly value="@Model.UserName" class="text-word">
                            </td>
                        </tr>
                        <tr onmouseout="this.style.backgroundColor='#ffffff'" onmouseover="this.style.backgroundColor='#edf5ff'">
                            <td align="right" valign="middle" class="borderright borderbottom bggray">姓名：</td>
                            <td align="left" valign="middle" class="borderright borderbottom main-for">
                                <input type="text" readonly value="@Model.RealName" class="text-word">
                            </td>
                        </tr>
                        <tr onmouseout="this.style.backgroundColor='#ffffff'" onmouseover="this.style.backgroundColor='#edf5ff'">
                            <td align="right" valign="middle" class="borderright borderbottom bggray">充值：</td>
                            <td align="left" valign="middle" class="borderright borderbottom main-for">
                                <input type="text" id="money" name="money" value="" class="text-word">元  *请输入数字
                            </td>
                        </tr>
                        <tr onmouseout="this.style.backgroundColor='#ffffff'" onmouseover="this.style.backgroundColor='#edf5ff'">
                            <td align="right" valign="middle" class="borderright borderbottom bggray">&nbsp;</td>
                            <td align="left" valign="middle" class="borderright borderbottom main-for">
                                <input name="" type="button" value="提交" onclick="addform()" class="text-but">
                                <input name="" type="reset" value="重置" class="text-but">
                            </td>
                        </tr>
                    </table>
                </form>
            </td>
        </tr>
    </table>
</body>
</html>